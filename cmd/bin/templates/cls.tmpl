package {{ .TableName }}

import (
	"github.com/jmoiron/sqlx"
	"github.com/superg3m/stoic-go/Core/ORM"
	"time"
)


type {{ .TableName }} struct {
	DB *sqlx.DB

	{{- range .Attributes }}
	{{ .Name }} {{ .Type }}
	{{- end }}
}

func New() *{{ .TableName }} {
	ret := new({{ .TableName }})

	//ret.DB = ORM.GetInstance()

    {{- range .Attributes }}
    {{- if eq .Type "string" }}
    ret.{{ .Name }} = ""
    {{- else if eq .Type "int" }}
    ret.{{ .Name }} = 0
    {{- else if eq .Type "bool" }}
    ret.{{ .Name }} = false
    {{- else if eq .Type "float" }}
    ret.{{ .Name }} = 0.0
    {{- else if eq .Type "time.Time" }}
    ret.{{ .Name }} = time.Now()
    {{- else if eq .Type "*time.Time" }}
    ret.{{ .Name }} = nil
    {{- end }}
    {{- end }}

	return ret
}

func From{{- range $index, $key := .PrimaryKeys }}{{ if $index }}_{{ end }}{{ $key.Name }}{{- end }}(
    {{- range $index, $key := .PrimaryKeys }}{{ if $index }}, {{ end }}{{ $key.Name }} {{ $key.Type }}{{- end }}) (*{{ .TableName }}, error) {
    ret := New()
    {{- range $key := .PrimaryKeys }}
    ret.{{ $key.Name }} = {{ $key.Name }}
    {{- end }}

    read := ret.Read()
    if read.IsBad() {
        return nil, read.GetError()
    }

    {{ $.TableName }}.SetCache(*ret)

    return ret, nil
}

{{- range .UniqueKeys }}
func From{{ .Name }}({{ .Name }} {{ .Type }}) (*{{ $.TableName }}, error) {
    ret := New()
    ret.{{ .Name }} = {{ .Name }}

    read := ret.Read()
	if read.IsBad() {
		return nil, read.GetError()
	}

	{{ $.TableName }}.SetCache(*ret)

	return ret, nil
}
{{- end }}

func init() {
	ORM.RegisterTableName({{ .TableName }}{})

    {{- range .Attributes }}
    {{- if .Flags }}
    ORM.RegisterTableColumn("{{ .Name }}", "{{ .Column }}", {{ .Flags }})
    {{- else }}
    ORM.RegisterTableColumn("{{ .Name }}", "{{ .Column }}")
    {{- end }}
    {{- end }}
}